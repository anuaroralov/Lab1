<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.lab1.HomeFragment"
        android:label="Home fragment"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_FirstFragment_to_firstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_secondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_thirdFragment"
            app:destination="@id/ThirdFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_fourthFragment"
            app:destination="@id/FourthFragment" />
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.lab1.ui.first_fragment.FirstFragment"
        android:label="First fragment"
        tools:layout="@layout/fragment_first" />
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.lab1.ui.second_fragment.SecondFragment"
        android:label="Second fragment"
        tools:layout="@layout/fragment_second" />
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.lab1.ui.third_fragment.ThirdFragment"
        android:label="Third fragment"
        tools:layout="@layout/fragment_fourth" />
    <fragment
        android:id="@+id/FourthFragment"
        android:name="com.example.lab1.ui.fourth_fragment.FourthFragment"
        android:label="Fourth fragment"
        tools:layout="@layout/fragment_third" />
</navigation>